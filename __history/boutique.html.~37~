<script>
    // Tableau pour stocker les produits ajoutés
    const panier = [];

    // Récupérer les infos produits dans la page
    function getProduitById(id) {
      return document.querySelector(`.produit[data-id="${id}"]`);
    }

    // Ajouter un produit au panier
    function ajouterAuPanier(id) {
      const produitElem = getProduitById(id);
      const nom = produitElem.getAttribute('data-nom');
      const prix = parseFloat(produitElem.getAttribute('data-prix'));

      // Vérifie si le produit est déjà dans le panier
      const index = panier.findIndex(item => item.id === id);
      if (index === -1) {
        panier.push({id, nom, prix, quantite: 1});
      } else {
        panier[index].quantite++;
      }

      afficherPanier();
    }

    // Afficher le contenu du panier
    function afficherPanier() {
      const listePanier = document.getElementById('liste-panier');
      const totalElem = document.getElementById('total');

      if (panier.length === 0) {
        listePanier.innerHTML = '<li>Votre panier est vide.</li>';
        totalElem.textContent = '';
        return;
      }

      listePanier.innerHTML = '';
      let total = 0;

      panier.forEach(item => {
        const li = document.createElement('li');
        li.textContent = `${item.nom} x${item.quantite} - ${item.prix * item.quantite} FCFA`;
        listePanier.appendChild(li);
        total += item.prix * item.quantite;
      });

      totalElem.textContent = `Total : ${total} FCFA`;
    }
    
  function envoyerCommandeWhatsApp() {
  if (panier.length === 0) {
    alert("Votre panier est vide.");
    return;
  }

  let message = "Bonjour, je souhaite commander :%0A";
  panier.forEach(item => {
    message += `- ${item.nom} x${item.quantite} (${item.prix * item.quantite}FCFA)%0A`;
  });

  const numero = "221776631653"; 
  const url = `https://wa.me/221776631653?text=${message}`;
  window.open(url, '_blank');
}

  </script>
